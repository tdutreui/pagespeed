.page-form(data-controller='page-form')
  =form_with(model: @page, html: {autocomplete: 'off', data: {target: 'page-form.form'}}) do |f|
    .page-form-fields
      =f.label :daily_run, 'Run daily'
      =f.check_box :daily_run, data: {target: 'page-form.checkbox'}
      =f.label :weekly_run, 'Run weekly'
      =f.check_box :weekly_run, data: {target: 'page-form.checkbox'}
      =f.label :send_drop_alert_email,'Email me when performance drops'
      =f.check_box :send_drop_alert_email, data: {target: 'page-form.checkbox'}
